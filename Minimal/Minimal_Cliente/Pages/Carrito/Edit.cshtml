@page
@model Minimal_Cliente.Pages.Carrito.EditModel

@{
    ViewData["Title"] = "Edit";
    string rutaImg = "/img/" + Model.productoCarrito.PRD_RUTA_IMAGEN;

}

<h1>Edit</h1>

<h4>CARRITO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="carritoEdit.CAR_ID" />
            <img src=@rutaImg alt="imagen del producto"
                 style="width: 100%; max-width: 100px; max-height: auto;" />
            <div class="form-group">
                <label asp-for="productoCarrito.PRD_DESCRIPCION" class="control-label"></label>
                <input asp-for="productoCarrito.PRD_DESCRIPCION" class="form-control" disabled />
                <span asp-validation-for="productoCarrito.PRD_DESCRIPCION" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productoCarrito.PRD_PRECIO" class="control-label"></label>
                <input asp-for="productoCarrito.PRD_PRECIO" class="form-control" disabled />
                <span asp-validation-for="productoCarrito.PRD_PRECIO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productoCarrito.PRD_PESO" class="control-label"></label>
                <input asp-for="productoCarrito.PRD_PESO" class="form-control" disabled />
                <span asp-validation-for="productoCarrito.PRD_PESO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="productoCarrito.CAR_CANTIDAD" class="control-label"></label>
                <input asp-for="productoCarrito.CAR_CANTIDAD" class="form-control" />
                <span asp-validation-for="productoCarrito.CAR_CANTIDAD" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
