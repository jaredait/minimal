@page
@model Minimal_Cliente.Pages.Tienda.IndexModel

@{
    ViewData["Title"] = "Tienda";
}
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="css/bulma.min.css">
    <link rel="stylesheet" href="css/material-design-iconic-font.css">
    <link rel="stylesheet" href="css/styles.css">
    <title>Minimal</title>
</head>

<h1>Productos</h1>
<input asp-for="nombreUsuario" type="hidden" />

<div class="card-columns">
    @foreach (var producto in Model.listaProductos)
    {
        <div class="card" style="width: 18rem;">
            <div style="width: 100%; height: 200px; display:flex; flex-direction:row; justify-content:center;">
                <img class="card-img-top" src=@Url.Content("~/img/" + producto.PRD_RUTA_IMAGEN) alt="Imagen de la tarjeta"
                     style="width: 100%; max-width: 100px; max-height: auto;">
            </div>

            <div class="card-body">
                <h5 class="card-title">@producto.PRD_NOMBRE</h5>
                <p class="card-text texto">@producto.PRD_PRECIO</p>
                <div class="btn btn-primary" id="@producto.PRD_ID">
                    <a asp-page="./Edit" asp-route-id="@producto.PRD_ID" class="text-decoration-none" style="color: #ffffff;">Detalles</a>
                </div>
            </div>
        </div>
    }
</div>
<script>

    let miNombre = document.querySelector("#nombreUsuario").value;
    let miMenu = document.querySelector("#dropdownMenuButton");
    miMenu.textContent = miNombre;

</script>
